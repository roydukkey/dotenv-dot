{
	"compilerOptions": {
		"lib": [ "es5", "es6", "es7", "es2015", "es2016", "es2017", "es2018", "esnext"],
		"target": "es2017",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true
	},
	"exclude": [
		"node_modules",
		"./dist",
		"./test"
	]
}
